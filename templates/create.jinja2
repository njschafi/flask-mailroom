{% extends 'base.jinja2' %}

{% block subtitle %}Add a donation{% endblock subtitle %}

{% block content %}
<form method="POST">
    {% if error %}<p>{{ error }}</p>{% endif %}
    <label for="name-input">Donor Name:</label><input id="name-input" type="text" name="name"><br />
    <label for="donation-input">Donation Amount:</label><input id="donation-input" type="number" name="donation"><br />
    <input type="submit" value="Submit Donation">
</form>
{% endblock content %}
